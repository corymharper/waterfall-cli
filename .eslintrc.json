{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": "off",
        "no-shadow": 0,
        "no-tabs": 0,
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ]
    }
}
