{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es6"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
